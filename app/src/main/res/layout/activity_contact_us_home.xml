<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_contact_us_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.kisha.skct.ContactUsHome">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sk"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/textView83"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ct"
            android:id="@+id/textView84"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/textView83"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont1"
            android:id="@+id/textView85"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_below="@+id/textView84"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont2"
            android:id="@+id/textView86"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/contact"
            android:drawablePadding="10dp"
            android:layout_below="@+id/textView85"
            android:drawableTint="@color/black_overlay"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont3"
            android:id="@+id/textView87"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/black_overlay"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:layout_below="@+id/textView86"
            android:layout_alignParentLeft="true"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cont4"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black_overlay"
        android:id="@+id/textView88"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView87"
        android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont5"
            android:id="@+id/textView89"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_below="@+id/textView88"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:drawableTint="@color/black_overlay"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>
</ScrollView>